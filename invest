    <!-- Scripts -->
    <script src="/assets/js/main.js"></script>
    <script src="/assets/js/wallet.js"></script>
    <script>
        // Chart.js Configuration
        document.addEventListener('DOMContentLoaded', async function() {
            // Initialize wallet
            await initWallet();
            
            // Load price data
            await fetchPriceData();
            
            // Initialize charts
            initCharts();
            
            // Setup chart time period buttons
            document.querySelectorAll('.timeframe-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.timeframe-btn').forEach(b => 
                        b.classList.remove('bg-gray-900'));
                    this.classList.add('bg-gray-900');
                    updateChartTimeframe(this.dataset.time);
                });
            });
            
            document.querySelectorAll('.goldtime-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.goldtime-btn').forEach(b => 
                        b.classList.remove('bg-gray-900'));
                    this.classList.add('bg-gray-900');
                    updateGoldChartTimeframe(this.dataset.time);
                });
            });
        });

        // Chart instances
        let priceChart, goldChart, technicalChart;

        function initCharts() {
            // Main Price Chart
            const priceCtx = document.getElementById('priceChart').getContext('2d');
            priceChart = new Chart(priceCtx, {
                type: 'line',
                data: {
                    labels: Array(24).fill().map((_, i) => `${i}:00`),
                    datasets: [{
                        label: '$PGC Price',
                        data: Array(24).fill().map(() => Math.random() * 10 + 15),
                        borderColor: '#FFD700',
                        backgroundColor: 'rgba(255, 215, 0, 0.1)',
                        borderWidth: 2,
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: getChartOptions('Price (USDT)')
            });

            // Gold Correlation Chart
            const goldCtx = document.getElementById('goldChart').getContext('2d');
            goldChart = new Chart(goldCtx, {
                type: 'line',
                data: {
                    labels: Array(24).fill().map((_, i) => `${i}:00`),
                    datasets: [
                        {
                            label: '$PGC Price',
                            data: Array(24).fill().map(() => Math.random() * 10 + 15),
                            borderColor: '#FFD700',
                            backgroundColor: 'transparent',
                            borderWidth: 2,
                            yAxisID: 'y'
                        },
                        {
                            label: 'Gold Price',
                            data: Array(24).fill().map(() => Math.random() * 5 + 60),
                            borderColor: '#B8860B',
                            backgroundColor: 'transparent',
                            borderWidth: 2,
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: getChartOptions('Price', true)
            });

            // Technical Indicators Chart
            const techCtx = document.getElementById('technicalChart').getContext('2d');
            technicalChart = new Chart(techCtx, {
                type: 'bar',
                data: {
                    labels: ['RSI', 'MACD', 'Bollinger', 'Volume', 'Support', 'Resistance'],
                    datasets: [{
                        label: 'Technical Strength',
                        data: [65, 59, 80, 81, 56, 72],
                        backgroundColor: 'rgba(255, 215, 0, 0.7)',
                        borderColor: '#FFD700',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: 'rgba(255, 255, 255, 0.7)'
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: 'rgba(255, 255, 255, 0.7)'
                            }
                        }
                    }
                }
            });
        }

        function getChartOptions(title, dualAxis = false) {
            return {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        labels: {
                            color: '#FFF'
                        }
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false
                    },
                    title: {
                        display: false,
                        text: title
                    }
                },
                scales: {
                    x: {
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: 'rgba(255, 255, 255, 0.7)'
                        }
                    },
                    y: {
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: 'rgba(255, 255, 255, 0.7)'
                        },
                        position: 'left',
                        title: {
                            display: true,
                            text: dualAxis ? '$PGC Price' : title,
                            color: '#FFD700'
                        }
                    },
                    ...(dualAxis ? {
                        y1: {
                            grid: {
                                drawOnChartArea: false
                            },
                            ticks: {
                                color: '#B8860B'
                            },
                            position: 'right',
                            title: {
                                display: true,
                                text: 'Gold Price (USD/oz)',
                                color: '#B8860B'
                            }
                        }
                    } : {})
                },
                interaction: {
                    mode: 'nearest',
                    axis: 'x',
                    intersect: false
                }
            };
        }

        async function fetchPriceData() {
            try {
                // In production, replace with actual API calls
                simulateMarketData();
                
                // Update stats
                document.getElementById('market-cap').textContent = '$4,827,450';
                document.getElementById('circulating-supply').textContent = '32.5M';
                document.getElementById('gold-reserves').textContent = '185 kg';
                document.getElementById('apy').textContent = '12.5%';
                
            } catch (error) {
                console.error("Error fetching market data:", error);
            }
        }

        function simulateMarketData() {
            // Simulate changing price data
            setInterval(() => {
                // Update main chart
                const newData = priceChart.data.datasets[0].data.map(value => 
                    Math.max(10, value + (Math.random() - 0.5))
                );
                priceChart.data.datasets[0].data = newData;
                priceChart.update();
                
                // Update gold chart
                const newPgcData = goldChart.data.datasets[0].data.map(value => 
                    Math.max(10, value + (Math.random() - 0.5))
                );
                const newGoldData = goldChart.data.datasets[1].data.map(value => 
                    Math.max(50, value + (Math.random() - 0.3))
                );
                goldChart.data.datasets[0].data = newPgcData;
                goldChart.data.datasets[1].data = newGoldData;
                goldChart.update();
                
                // Update technical indicators
                const newTechData = technicalChart.data.datasets[0].data.map(value => 
                    Math.max(0, Math.min(100, value + (Math.random() * 10 - 5)))
                );
                technicalChart.data.datasets[0].data = newTechData;
                technicalChart.update();
                
            }, 3000);
        }

        function updateChartTimeframe(timeframe) {
            // In production, fetch new data based on timeframe
            const dataPoints = 
                timeframe === '24h' ? 24 :
                timeframe === '7d' ? 7 :
                timeframe === '30d' ? 30 : 90;
                
            const labels = 
                timeframe === '24h' ? Array(24).fill().map((_, i) => `${i}:00`) :
                timeframe === '7d' ? ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'] :
                Array(dataPoints).fill().map((_, i) => `Day ${i+1}`);
                
            const newData = Array(dataPoints).fill().map(() => 
                Math.random() * 10 + (timeframe === '90d' ? 10 : 15)
            );
            
            priceChart.data.labels = labels;
            priceChart.data.datasets[0].data = newData;
            priceChart.update();
        }

        function updateGoldChartTimeframe(timeframe) {
            // Similar to above but for gold chart
            const dataPoints = 
                timeframe === '24h' ? 24 :
                timeframe === '7d' ? 7 : 30;
                
            const labels = 
                timeframe === '24h' ? Array(24).fill().map((_, i) => `${i}:00`) :
                timeframe === '7d' ? ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'] :
                Array(dataPoints).fill().map((_, i) => `Day ${i+1}`);
                
            const newPgcData = Array(dataPoints).fill().map(() => 
                Math.random() * 10 + (timeframe === '30d' ? 10 : 15)
            );
            
            const newGoldData = Array(dataPoints).fill().map(() => 
                Math.random() * 5 + (timeframe === '30d' ? 55 : 60)
            );
            
            goldChart.data.labels = labels;
            goldChart.data.datasets[0].data = newPgcData;
            goldChart.data.datasets[1].data = newGoldData;
            goldChart.update();
        }

        // Handle investment tier clicks
        document.querySelectorAll('.investment-card button').forEach(btn => {
            btn.addEventListener('click', function() {
                if (!userAddress) {
                    alert('Please connect your wallet first');
                    document.getElementById('connectWallet').click();
                    return;
                }
                
                const tier = this.closest('.investment-card').querySelector('h3').textContent;
                alert(`Redirecting to ${tier} investment portal...`);
                // In production, would connect to smart contract
            });
        });
    </script>
</body>
</html>
